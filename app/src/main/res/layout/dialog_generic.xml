<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyBackgroundDialog"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    style="@style/windowDialog">

    <com.example.pokeaprendo.reusables_views.InfoDialogView
        android:id="@+id/idTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/poke_example"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Texto de prueba"/>

    <LinearLayout
        android:id="@+id/lyDynamicContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btAcceptItems"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text="@string/next_question"/>

</LinearLayout>